<%= render :partial => "custom_javascript_find_categories.html", :locals => { :all => false} %>

<div class="pic_header float_left header margin_padding">
  <h1 class="h_center">
    Free classifieds between fellows : free, easy and fast.
  </h1>
  <div class="clear"></div>
</div>
<div class="pic_header detail_content float_left margin_padding">
  <% form_for @classified, :url => create_post_classified_path, :html => {:multipart => true} do |f| %>
    <%= f.error_messages %>
    <div class="subcategory_1 float_left">
      <p>Posting Title:</p>
    </div>
    <div class="subcategory_2 float_left">
      <%= f.text_field :title, :class => "input_classified" %>
    </div>
    <div class="app_clear">&nbsp;</div>
    <div class="subcategory_1 float_left">
      <p>Price:</p>
    </div>
    <div class="subcategory_2 float_left">
      <%= f.text_field :price, :class => "input_classified" %>
    </div>
    <div class="app_clear">&nbsp;</div>
    <div class="subcategory_1 float_left">
      <p>Location:</p>
    </div>
    <div class="subcategory_2 float_left">
      <%= f.select :location_id, @locations.collect{|x| [x.name,x.id]} %>
    </div>
    <div class="app_clear">&nbsp;</div>
    <div class="subcategory_1 float_left">
      <p>Specific Location:</p>
    </div>
    <div class="subcategory_2 float_left">
      <%= f.text_field :typed_location, :class => "input_classified" %>
    </div>
    <div class="app_clear">&nbsp;</div>
    <div class="subcategory_1 float_left">
      <p>Category:</p>
    </div>
    <div class="subcategory_2 float_left">
      <%= f.select :category_id, @categories.collect{|x| [x.name,x.id]} %>
    </div>
    <div class="app_clear">&nbsp;</div>
    <div class="subcategory_1 float_left">
      <p>Sub Category:</p>
    </div>
    <div class="subcategory_2 float_left">
      <%= f.select :sub_category_id, @sub_category_housings.collect{|x| [x[1],x[0]]} %>
    </div>
    <div class="app_clear">&nbsp;</div>
    <div class="subcategory_1 float_left">
      <p>Miscellaneous:</p>
    </div>
    <div class="subcategory_2 float_left">
      <%= f.text_field :misc, :class => "input_classified" %>
    </div>
    <div class="app_clear">&nbsp;</div>
    <div class="subcategory_1 float_left">
      <p>Posting Description:</p>
    </div>
    <div class="subcategory_2 float_left">
      <%= f.text_area :description, :class => "input_classified input_height" %>
    </div>
    <div class="app_clear">&nbsp;</div>
    <div class="subcategory_1 float_left">
      <p>Add / Edit images:</p>
    </div>
    <div id="image_list" class="subcategory_2 float_left">
      <%= file_field_tag "pictures[1][uploaded_data]", :size => "20" %>
      <%= file_field_tag "pictures[2][uploaded_data]", :size => "20" %>
      <%= file_field_tag "pictures[3][uploaded_data]", :size => "20" %>
      <%= file_field_tag "pictures[4][uploaded_data]", :size => "20" %>
    </div>
    <div class="app_clear">&nbsp;</div>
    <div class="separator"></div>
    <div>
      <input type="submit" value="post" class="float_right"/>
        <%= link_to "<p>Cancel</p>", :back , :class => "float_right margin_padding normal" %>
    </div>
  <% end %>
</div>
